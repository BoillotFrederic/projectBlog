{% extends 'base.html.twig' %}

{% block body %}
    <h1>Créer un Nouvel article</h1>

    <form id="formPost" method="post" enctype="multipart/form-data">
      <div>
      </label for="img">Photo</label>
        <input id="img" name="img" type="file" />
      </div>
      <div>
        <label for="text" class="required">Texte</label>
        <textarea id="text" name="text" required="required"></textarea>
      </div>
        <button id="valider" name="valider" type="submit" />Valider</button>
    </form>

    <ul>
        <li>
            <a href="{{ path('post_index') }}">Retour à la page d'administration</a>
        </li>
    </ul>
{% endblock %}
