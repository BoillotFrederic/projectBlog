
{% extends 'base.html.twig' %}

{% block body %}
{% if app.session.get('userPermission') == 2 %}
    <h1>Liste des utilisateurs</h1>


    <table>
    <a id="btnAdd" href="{{ path('user_new') }}">Créer un nouvel utilisateur</a>

    <table id="users">

        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Créer un nouvel utilisateur</a>
        </li>
    </ul>
{% endif %}
{% endblock %}

