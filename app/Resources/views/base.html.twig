<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}Project Blog Simplon</title>
        {% block stylesheets %}{% endblock %}
        <META NAME="Projet Blog Fred et François" CONTENT="Blog Simplon Fred et François">
        <META NAME="Keywords" CONTENT="Project Blog, Project Blog Simplon, Projet Blog Fred et François, Acceuil">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		  <link type="text/css" rel="stylesheet" href="{{ asset('css/materialize.css') }}"  media="screen,projection"/>
		  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		  <script src="https://use.fontawesome.com/c9b70bfdc8.js"></script>
    </head>
    <body>
      {% for msg in app.session.flashbag.get('success') %}
      <div class="col s6 l6 m6 text-center "id="success">
        <strong>{{ msg }}</strong>
      </div>
      {% endfor %}
      {% for msg in app.session.flashbag.get('error') %}
      <div class="col s6 l6 m6 " id="error">
        <strong>{{ msg }}</strong>
      </div>
      {% endfor %}
      <nav id="navBar">
      <div class="nav-wrapper" >
          <ul class="left"> 
              <li><a class="brand-logo"><img src="{{ asset('logo.jpg')}}" class="logo"/></a></li>  
              </ul>
               <a href="#" data-activates="mobile-demo" class="show-for-small-only button-collapse"><i class="material-icons">menu</i></a>
        {#<div class="nav-wrapper" id="navBar">#}
          <ul class="right hide-on-med-and-down">
            {% if app.session.get('connected') %}
              <a href="{{ path('post_index') }}">
                Accueil
              </a>
              {% if app.session.get('userPermission') == 2 %}
              |
              <a href="{{ path('user_index') }}">
                Utilisateurs
              </a>
              {% endif %}
              |
              <a id="userLoad" href="{{ path('user_edit', { 'id': app.session.get('userId') }) }}">
                {{ app.session.get('userName') }}
                <img src="/uploads/{{ app.session.get('userAvatar') }}" alt="Avatar" />
              </a>
              |
              <a href="{{ path('user_disconnect') }}">
                Deconnexion
              </a>
            </li>
            {% else %}
            <li>
              <a href="{{ path('user_new') }}">
                Créer un compte
              </a>
              <a id="connect" href="#">
                Connexion
              </a>
            </li>
                                    <li>
            <a href="{{ path('post_index', { '_locale': 'fr'}) }}"><img src="{{ asset('fr.png')}}"</a>
            </li>
            <li>
            <a href="{{ path('post_index', { '_locale': 'en'}) }}"><img src="{{ asset('en.png')}}"</a>
            </li>
            {% endif %}

          </ul>
            <ul class="side-nav" id="mobile-demo">
            {% if app.session.get('connected') %}
              <a href="{{ path('post_index') }}">
                Accueil
              </a>
              {% if app.session.get('userPermission') == 2 %}
              |
              <a href="{{ path('user_index') }}">
                Utilisateurs
              </a>
              {% endif %}
              |
              <a id="userLoad" href="{{ path('user_edit', { 'id': app.session.get('userId') }) }}">
                {{ app.session.get('userName') }}
                <img src="/uploads/{{ app.session.get('userAvatar') }}" alt="Avatar" />
              </a>
              |
              <a href="{{ path('user_disconnect') }}">
                Deconnexion
              </a>
            </li>
            {% else %}
            <li>
              <a href="{{ path('user_new') }}">
                Créer un compte
              </a>
              <a id="connect" href="#">
                Connexion
              </a>
            </li>
  {#                                  <li>
            <a href="{{ path('post_index', { '_locale': 'fr'}) }}"><img src="{{ asset('fr.png')}}"</a>
            </li>
            <li>
            <a href="{{ path('post_index', { '_locale': 'en'}) }}"><img src="{{ asset('en.png')}}"</a>
            </li>#}
            {% endif %}

          </ul>
        {#</div>#}
        </div>
        <div class="col s6 l6 m6" id="connectBox">
          <form action="{{ path('user_connect') }}" method="post">
            <label for="pseudo">Pseudo</label>
            <input id="pseudo" name="pseudo" type="text">
            <label for="password">Mot de passe</label>
            <input id="password" name="password" type="password">
            <input class="waves-effect waves-light btn" id="btnConnect" type="submit" value="Connexion">
          </form>
        </div>
      </nav>
      <main>
        {% block body %}{% endblock %}
      </main>
      <footer>
      </footer>
        {% block javascripts %}{% endblock %}
        <script src="{{ asset('js/jScript.js') }}" type="text/javascript"></script>
         <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script type="text/javascript" src="{{ asset('js/materialize.js') }}"></script>
      <script>//Animations
$(document).ready(function() {
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
    $('.modal').modal();
});
 $(".button-collapse").sideNav();
$(document).ready(function() {
    $('.parallax').parallax();
});

   $(document).ready(function(){
  //Afficher
  $(".posts").mouseover(function(){
    $(".description").css({
       'display': 'block'          
    });        
  });  
 
  //Masquer
  $(".posts").mouseout(function(){
    $(".description").css({
      'display': 'none'        
    });        
  });  
});
$(document).ready(function() {

    $(".js-scrollTo").fadeOut();
    $(window).scroll(function() {
        if ($(this).scrollTop() > 300) {
            $('.js-scrollTo').fadeIn();
        } else {
            $('.js-scrollTo').fadeOut();
        }
    });

    $('.js-scrollTo').click(function() {
        $('html, body').animate({
            scrollTop: 0
        }, 800);
        return false;
    });
});
